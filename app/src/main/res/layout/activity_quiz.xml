<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/quiz_background"
    android:layout_height="match_parent"
    tools:context=".Quiz.QuizActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/quiz_back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_close_24"
                        android:layout_marginEnd="10dp"
                        android:onClick="endExam"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/quiz_name_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:gravity="center"
                        android:text="Quiz Name Here"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question No."
                        android:textColor="#fbd7ac"
                        android:textSize="22sp"
                        android:layout_marginStart="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/question_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 "
                        android:textColor="#fbd7ac"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/total_questions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/11"
                        android:textColor="#fbd7ac"
                        android:textSize="18sp"
                        android:layout_gravity="top"
                        />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_questions"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:max="100"
                    android:progress="20"
                    android:progressDrawable="@drawable/layer_list_progress_drawable" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:elevation="0.0dp"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/scroll_curve_all_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/scroll_curve_all_white" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/scroll_curve_all_white"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <TextView
                                android:id="@+id/quiz_question"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Question Text Will Go Here. Sample Text to be replaced using java"
                                android:textSize="20sp"
                                android:justificationMode="inter_word"

                                />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/black"/>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                >

                                <RelativeLayout
                                    android:id="@+id/optionL1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:onClick="selectOption1"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/option_background"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/quiz_option1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_toStartOf="@+id/radio_option_1"
                                        android:gravity="center"
                                        android:text="OPTION" />

                                    <RadioButton
                                        android:id="@+id/radio_option_1"
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:onClick="selectOption1"
                                        android:layout_alignParentEnd="true"/>

                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/optionL2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:onClick="selectOption2"
                                    android:background="@drawable/option_background"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/quiz_option2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_toStartOf="@+id/radio_option_2"
                                        android:gravity="center"
                                        android:text="OPTION" />

                                    <RadioButton
                                        android:id="@+id/radio_option_2"
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:onClick="selectOption2"
                                        android:layout_alignParentEnd="true"/>

                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/optionL3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:onClick="selectOption3"
                                    android:background="@drawable/option_background"
                                    android:layout_marginBottom="10dp"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/quiz_option3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_toStartOf="@+id/radio_option_3"
                                        android:gravity="center"
                                        android:text="OPTION" />

                                    <RadioButton
                                        android:id="@+id/radio_option_3"
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:onClick="selectOption3"
                                        android:layout_alignParentEnd="true"/>

                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/optionL4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:onClick="selectOption4"
                                    android:background="@drawable/option_background"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/quiz_option4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_toStartOf="@+id/radio_option_4"
                                        android:gravity="center"
                                        android:text="OPTION" />

                                    <RadioButton
                                        android:id="@+id/radio_option_4"
                                        android:layout_width="30dp"
                                        android:layout_height="20dp"
                                        android:onClick="selectOption4"
                                        android:layout_alignParentEnd="true"/>

                                </RelativeLayout>


                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/next_button"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:paddingTop="10dp"
                        android:onClick="prev"
                        android:layout_marginEnd="2dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:text="PREV"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/next_button"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:paddingTop="10dp"
                        android:onClick="next"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/next_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:text="NEXT"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>